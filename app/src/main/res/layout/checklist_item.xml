<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_checklist_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckBox
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/cb_checklist_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_checklist_item"
        app:layout_constraintStart_toEndOf="@id/cb_checklist_item"
        app:layout_constraintEnd_toStartOf="@id/id_delete_item"
        app:layout_constraintTop_toTopOf="parent"
        android:singleLine="true"
        android:layout_width="290dp"
        android:layout_height="wrap_content" />

    <Button
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/id_delete_item"
        android:background="@drawable/ic_delete_black_24dp"
        android:onClick="onDeleteItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>
